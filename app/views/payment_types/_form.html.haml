= form_for @payment_type do |f|
  -if @payment_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment_type.errors.count, "error")} prohibited this payment_type from being saved:"
      %ul
        - @payment_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit 'Save'
