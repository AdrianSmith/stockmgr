- model_class = Customer.new.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:address_line_1)
      %th= model_class.human_attribute_name(:address_line_2)
      %th= model_class.human_attribute_name(:suburb)
      %th= model_class.human_attribute_name(:city)
      %th= model_class.human_attribute_name(:postcode)
      %th= model_class.human_attribute_name(:phone_mobile)
      %th= model_class.human_attribute_name(:phone_home)
      %th= model_class.human_attribute_name(:phone_work)
      %th= model_class.human_attribute_name(:account_balance_cached)
      %th= model_class.human_attribute_name(:active)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @customers.each do |customer|
      %tr
        %td= link_to customer.id, customer_path(customer)
        %td= customer.first_name
        %td= customer.last_name
        %td= customer.email
        %td= customer.address_line_1
        %td= customer.address_line_2
        %td= customer.suburb
        %td= customer.city
        %td= customer.postcode
        %td= customer.phone_mobile
        %td= customer.phone_home
        %td= customer.phone_work
        %td= customer.account_balance_cached
        %td= customer.active
        %td=l customer.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_customer_path(customer), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), customer_path(customer), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_customer_path, :class => 'btn btn-primary'
