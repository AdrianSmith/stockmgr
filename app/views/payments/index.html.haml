- model_class = Payment.new.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:amount)
      %th= model_class.human_attribute_name(:payment_type_id)
      %th= model_class.human_attribute_name(:customer_id)
      %th= model_class.human_attribute_name(:comment)
      %th= model_class.human_attribute_name(:received_at)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @payments.each do |payment|
      %tr
        %td= link_to payment.id, payment_path(payment)
        %td= payment.amount
        %td= payment.payment_type_id
        %td= payment.customer_id
        %td= payment.comment
        %td= payment.received_at
        %td=l payment.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_payment_path(payment), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), payment_path(payment), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_payment_path, :class => 'btn btn-primary'
